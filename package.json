  "description": "Signle line website",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "build": "next build",
    "commit": "git add . && cz",
    "dev": "next dev",
    "preinstall": "npx only-allow pnpm",
    "lint": "concurrently -c green \"pnpm:lint:*\"",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:next": "next lint",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "playwright:inspect": "PWDEBUG=1 playwright test",
    "playwright:install": "playwright install",
    "playwright:test": "playwright test",
    "playwright:update-snapshots": "playwright test --update-snapshots",
    "start": "next build && next start",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"pnpm:test:*\"",
    "test:e2e": "npm run playwright:test",
    "test:unit": "jest",
    "base:check": "sh ./scripts/check_base_update.sh",
    "base:update": "sh ./scripts/update_base.sh"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^13.0.6",
    "@next/font": "^13.0.6",
    "classnames": "2.3.2",
    "modern-normalize": "^1.1.0",
    "next": "13.0.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@commitlint/lint": "^17.3.0",
    "@evilmartians/lefthook": "^1.2.4",
    "@playwright/test": "1.28.1",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.13",
    "@types/react": "18.0.26",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "commitizen": "4.2.6",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.6.0",
    "eslint": "8.29.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "13.0.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "jest-junit": "15.0.0",
    "prettier": "2.8.1",
    "sort-package-json": "2.1.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
